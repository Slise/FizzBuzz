#include <stdio.h>

int main (void)
{
    int i = 1;
    
    //run number 1 to 100
    for (i = 1;i <= 100;++i)
            {
                //case 1 print "Fizz" if multiple of 3
                if (i % 3 == 0)
                {
                    printf("Fizz");
                }
                //case 2 print "Buzz" if multiple of 5
                else if
                    (i % 5 == 0)
                {
                    printf("Buzz");
                }
                //case 3 print "FizzBuzz" if multiple of 3 and 5
                else if
                    (i % 3 == 0 && i % 5 == 0)
                {
                    printf("FizzBuzz");
                }
                //case 4 print number if not multiple of 3 or 5
                    printf("%d", i);
            }
    return 0;
}

